<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#137FD8</item>
        <item name="colorPrimaryDark">#80000000</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/gray</item>
    </style>


    <!--   materil design -->

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base" />


    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/space_mid10</item>
        <item name="android:paddingBottom">@dimen/space_tinny2</item>

    </style>

    <style name="wrap_text_medatory" parent="wrap_text_style">
        <item name="android:textSize">@dimen/size_small15</item>
        <item name="android:textColorHint">@color/signup_normal_text_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableRight">@drawable/ic_mendotry</item>
        <item name="android:drawablePadding">@dimen/space_tinny4</item>

    </style>


    <style name="match_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/space_mid10</item>
        <item name="android:paddingBottom">@dimen/space_mid10</item>

    </style>

    <style name="under_line_et" parent="match_text_style">
        <item name="android:textSize">@dimen/size_small15</item>
        <item name="android:textColorHint">@color/signup_normal_text_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/under_line</item>
        <item name="android:paddingTop">@dimen/space_tinny4</item>
        <item name="android:paddingBottom">@dimen/space_tinny4</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:inputType">textCapSentences|textNoSuggestions</item>
    </style>

    <style name="form_text_field" parent="TextAppearance.AppCompat">

        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#5e5e5e</item>

    </style>


</resources>
