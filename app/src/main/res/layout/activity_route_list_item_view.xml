<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_mid10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_mid10"
        android:paddingRight="@dimen/space_mid10">

        <TextView
            android:id="@+id/fr_loc_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="Source"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_small14" />

        <TextView
            android:id="@+id/fr_loc_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="from Location"
            android:textSize="@dimen/size_small14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_mid10"
        android:paddingRight="@dimen/space_mid10">

        <TextView
            android:id="@+id/to_loc_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="Destination"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_small14" />

        <TextView
            android:id="@+id/to_loc_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="@dimen/size_small14" />

        <!--<ImageView-->
        <!--android:id="@+id/icon"-->
        <!--android:layout_width="14sp"-->
        <!--android:layout_height="14sp"-->
        <!--android:layout_gravity="right"-->
        <!--android:src="@drawable/red_icn"-->
        <!--android:visibility="visible" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_mid10"
        android:paddingRight="@dimen/space_mid10">

        <TextView
            android:id="@+id/mode_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="Mode"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_small14" />

        <TextView
            android:id="@+id/mode_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mode"
            android:textSize="@dimen/size_small14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/space_mid10"
        android:paddingRight="@dimen/space_mid10">

        <TextView
            android:id="@+id/distance_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:text="Distance"
            android:textColor="@color/header_color"
            android:textSize="@dimen/size_small14" />

        <TextView
            android:id="@+id/distance_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance"
            android:textSize="@dimen/size_small14" />

    </LinearLayout>


</LinearLayout>






