<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/personal_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:visibility="visible"
        tools:ignore="ObsoleteLayoutParam">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_mid10"
                android:layout_marginRight="@dimen/space_mid10"
                android:background="@color/white"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/insurance_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:paddingTop="5dp"
                    android:text="@string/Vehicle"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_small15" />


                <CheckBox
                    android:id="@+id/licence_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/Driving"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_small15" />

                <CheckBox
                    android:id="@+id/puc_chk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/Vehicle_PUC"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_small15" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_make_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">


                            <EditText
                                android:id="@+id/vehicle_make"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_mendotry"
                                android:hint="@string/Vehicle_Make"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_rate_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">


                            <EditText
                                android:id="@+id/rate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_mendotry"
                                android:hint="@string/Rs"
                                android:inputType="number"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_pernr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/pernr_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="@string/SAP_Code"
                                android:inputType="number"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_pernrnm_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/pernrnm_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="@string/Person_Name"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_xlarge20"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/layout_distance_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:textColorHint="@color/colorAccent">

                                    <EditText
                                        android:id="@+id/distance_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="@string/Km"
                                        android:shadowColor="@color/colorAccent"
                                        android:singleLine="true"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHighlight="@color/colorAccent"
                                        android:textColorHint="@color/colorAccent"
                                        android:textColorLink="@color/colorAccent"
                                        android:textIsSelectable="false"
                                        android:textSize="@dimen/size_small15" />
                                </com.google.android.material.textfield.TextInputLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/size_xlarge20"
                                android:layout_weight="1"

                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/layout_mode_et"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"
                                    android:textColorHint="@color/colorAccent">

                                    <EditText
                                        android:id="@+id/mode_et"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:hint="@string/Mode_Transport"
                                        android:shadowColor="@color/colorAccent"
                                        android:singleLine="true"
                                        android:textColor="@color/colorAccent"
                                        android:textColorHighlight="@color/colorAccent"
                                        android:textColorHint="@color/colorAccent"
                                        android:textColorLink="@color/colorAccent"
                                        android:textIsSelectable="false"
                                        android:textSize="@dimen/size_small15" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_delivery_place_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/delivery_place_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/Place_Delivery"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_transit_time_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/transit_time_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/Transit_Time"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_vehicle_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/vehicle_type_et"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:hint="@string/Vehicle_Type"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_vehicle_weight_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/vehicle_weight_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/Weight"

                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_dala"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/dala_et"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:focusable="true"
                                android:hint="@string/Dala"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_height"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:textColorHint="@color/colorAccent">

                            <EditText
                                android:id="@+id/height_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/Height"
                                android:shadowColor="@color/colorAccent"
                                android:singleLine="true"
                                android:textColor="@color/colorAccent"
                                android:textColorHighlight="@color/colorAccent"
                                android:textColorHint="@color/colorAccent"
                                android:textColorLink="@color/colorAccent"
                                android:textIsSelectable="false"
                                android:textSize="@dimen/size_small15" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/rfq_date"
                            style="@style/under_line_et"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="number" />

                        <TextView
                            style="@style/wrap_text_medatory"
                            android:drawableRight="@null"
                            android:text="@string/Required_Date"
                            android:textColor="@color/colorAccent" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/rfq_time"
                            style="@style/under_line_et"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="number" />

                        <TextView
                            style="@style/wrap_text_medatory"
                            android:drawableRight="@null"

                            android:text="@string/Required_Time"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/size_xlarge20"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/expiry_date"
                            style="@style/under_line_et"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="number" />

                        <TextView
                            style="@style/wrap_text_medatory"
                            android:drawableRight="@null"

                            android:text="@string/Expiry_Date"
                            android:textColor="@color/colorAccent" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/expiry_time"
                            style="@style/under_line_et"
                            android:editable="false"
                            android:focusable="false"
                            android:inputType="number" />

                        <TextView
                            style="@style/wrap_text_medatory"
                            android:drawableRight="@null"

                            android:text="@string/Expiry_Time"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_rc_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorAccent">


                    <EditText
                        android:id="@+id/vehicle_rc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_mendotry"
                        android:hint="@string/Registration_Number"
                        android:shadowColor="@color/colorAccent"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textColorLink="@color/colorAccent"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/size_small15" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_remark_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorAccent">


                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Remark"
                        android:shadowColor="@color/colorAccent"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textColorLink="@color/colorAccent"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/size_small15" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_from_location_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/from_location_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/From_Location"
                        android:shadowColor="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textColorLink="@color/colorAccent"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/size_small15" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_to_location_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/colorAccent">

                    <EditText
                        android:id="@+id/to_location_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/To_Location"
                        android:shadowColor="@color/colorAccent"
                        android:textColor="@color/colorAccent"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/colorAccent"
                        android:textColorLink="@color/colorAccent"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/size_small15" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/get_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/header_color"
                    android:gravity="center"
                    android:padding="@dimen/space_mid10"
                    android:text="@string/View_Map"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_large18" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_xlarge20"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/header_color"
                    android:gravity="center"
                    android:padding="@dimen/space_mid10"
                    android:text="@string/Quote_RFQ"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_large18" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>