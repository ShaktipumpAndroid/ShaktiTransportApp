<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/create_rfq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/space_mid10"
        android:layout_marginTop="@dimen/space_mid10"
        android:layout_marginRight="@dimen/space_mid10"
        android:background="@color/header_color"
        android:gravity="center"
        android:padding="@dimen/space_mid10"
        android:text="New Request For Quotation"
        android:textColor="@color/white"
        android:textSize="@dimen/size_large18" />

    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:hint="Search By Document, From, To Location"
        android:textSize="15sp"
        android:textStyle="bold">

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/edit_text_border_bg"
        android:orientation="vertical">

        <ListView
            android:id="@+id/rfq_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_mid10"
            android:layout_marginTop="@dimen/space_mid10"
            android:layout_marginRight="@dimen/space_mid10"
            android:divider="@null"
            android:dividerHeight="@dimen/space_mid10">

        </ListView>
    </LinearLayout>

</LinearLayout>
