<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_mid10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/rfq_id_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="RFQ Doc"
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/rfq_id_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RFQ Id"
                android:textSize="@dimen/size_small14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/rfq_sap_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="SAP No."
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/sap_id_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/rfq_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Name"
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/name_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/from_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="From Loc"
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/from_loc_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/to_loc_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="To Loc"
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/to_loc_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/veh_nm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Vehical No."
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/veh_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/rfq_status_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Status"
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/rfq_status_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/space_mid10"
            android:paddingRight="@dimen/space_mid10">

            <TextView
                android:id="@+id/finl_rate_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="Final Rate"
                android:textColor="@color/header_color"
                android:textSize="@dimen/size_small14" />

            <TextView
                android:id="@+id/finl_rate_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/size_small14" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="6dp"
                android:paddingLeft="@dimen/space_mid6"
                android:paddingRight="@dimen/space_mid6"
                android:text="Confirm Vehicle"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:padding="6dp"
                android:paddingLeft="@dimen/space_mid6"
                android:paddingRight="@dimen/space_mid6"
                android:text="Details"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>



