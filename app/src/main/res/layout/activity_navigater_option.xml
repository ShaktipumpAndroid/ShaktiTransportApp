<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.Pod.NavigaterOptionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"

        >

        <TextView
            android:id="@+id/txtTransportAppID"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:background="@drawable/btn_shape_rounded"
            android:text="Transport App"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/txtTransportAppID"
            android:id="@+id/txtPODID"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:background="@drawable/btn_shape_rounded"
            android:text="Proof of delivery"
            android:gravity="center"
            android:textColor="@color/white"
            />

    </RelativeLayout>

</RelativeLayout>